//sum of matrix cols
#include <stdio.h>

int main()
{
    int n,m,i,j,a[10][10],s[10];
    printf ("Enter order of matrix ");
    scanf ("%d%d",&n,&m);
    printf ("\nEnter %d X %d matrix\n",n,m);
    for (i=1;i<=n;i++)
        for (j=1;j<=m;j++)
            scanf ("%d",&a[i][j]);
    
    printf ("\nthe given matrix is \n");
    for (i=1;i<=n;i++){
        for(j=1; j<=m;j++)
            printf ("%4d",a[i][j]);
           printf ("\n");
        }
        for (i=1;i<=m;i++){
            s[i]=0;
            for(j=1;j<=n;j++)
                s[i] +=a[j][i];
        }
        printf ("\n\ncolumn sum");
        for (i=1;i<=m;i++)
            printf ("%4d",s[i]);
    return 0;
}
