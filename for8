
//Enter n = 5
//The sum of numbers 1 to 5 = 15
//1+2+3+4+5 = 15

#include <stdio.h>
int main(){
    int n, i,s=0; // n input number, i loop
    printf ("Enter n: ");
    scanf ("%d",&n);
    for (i=1;i<=n;i++){
        s=s+i;
        printf ("sum of numbers from 1 to %d is %d\n", i,s);
        
    }
    printf ("the sum is %d", s);
    return 0;
}
